{% extends "admin/base.jinja" %}
{% block content %}
<!-- <h1 class="mt-5">Welcome, Admin!</h1> -->
{% if active_domains_count == 0 or users_count == 0 %}
<div class="section tutorial">
    <div class="row">
        <div class="col-12">
            {% if active_domains_count == 0 %}
            <div class="mt-2 mb-3">To get started, add a domain to your VPN.</div>
            <div class="mb-3">We recommend you to use a new domain for VPN connection, so if it's blocked, users can still get updates from {{ panel_domain }}.</div>
            <div class="mb-5">
                <a class="btn btn-primary mb-2" href="/{{ admin_uuid }}/domains/new/?next=dashboard">
                    Add new domain
                </a>
                <a class="btn btn-outline-primary mb-2" href="/{{ admin_uuid }}/domains/new/?domain={{ panel_domain }}&next=dashboard">
                    I understand, use {{ panel_domain }}
                </a>
            </div>
            {% endif %}
            <div class="mt-3 mb-3">
                After you've set up your domain, you can add users to your VPN.
            </div>
            <div class="mb-5">
                <a class="btn btn-primary" href="/{{ admin_uuid }}/users/new/?next=dashboard">
                    Add new user
                </a>
            </div>
        </div>
    </div>
</div>
<hr />
{% endif %}

{% if update_available %}
<div class="w-100 mt-4 px-3">
    ‚ö†Ô∏è There's a new version of Libertea available. <a href="https://github.com/VZiChoushaDui/Libertea#update" target="_blank">Update now</a>
</div>
{% endif %}

{% if no_domain_warning %}
<div class="w-100 mt-4 px-3">
    üö® Warning: You don't have any domains or secondary proxies set for your VPN. User's won't be able to connect to your VPN until you add a domain.<br /><a href="/{{ admin_uuid }}/domains/new/?next=dashboard">Add a domain</a>
</div>
{% endif %}
{% if no_camouflage_warning %}
<div class="w-100 mt-4 px-3">
    üö® Warning: You don't have a camouflage domain set up, this increases the chance of your VPN being blocked.<br /><a href="/{{ admin_uuid }}/settings/">Set up a camouflage domain</a>
</div>
{% endif %}
{% if active_domains_count == 1 %}
<div class="w-100 mt-4 px-3">
    ‚≠ê Tip: Use <strong>more than one domain</strong> to increase your VPN's availability.
</div>
{% endif %}
{% if proxies_count == 0 %}
<div class="w-100 mt-4 px-3">
    ‚≠ê Tip: Consider adding a <strong>secondary proxy</strong> for better availability across various networks.<br /><a href="/{{ admin_uuid }}/proxies/?new=true">Add a secondary proxy</a>
</div>
{% endif %}
<div class="section stats">
    <div class="row">
        <div class="col-12">
            <h6 class="bordered">Libertea status</h6>
        </div>
        <div class="col-6 col-sm-4 stats-item">
            <div class="stats-item-value">{{ users_count }}</div>
            <div class="stats-item-desc">Users</div>
        </div>
        <div class="col-6 col-sm-4 stats-item">
            <div class="stats-item-value">{{ active_domains_count }}</div>
            <div class="stats-item-desc">Active Domains</div>
        </div>
        <div class="col-6 col-sm-4 stats-item">
            <div class="stats-item-value">{{ proxies_count }}</div>
            <div class="stats-item-desc">Secondary proxies</div>
        </div>
        <div class="col-6 col-sm-4 stats-item">
            <div class="stats-item-value">{{ cpu_percent }}</div>
            <div class="stats-item-desc">Current CPU usage</div>
        </div>
        <div class="col-6 col-sm-4 stats-item">
            <div class="stats-item-value">{{ ram_percent }}</div>
            <div class="stats-item-desc">Current RAM usage</div>
        </div>
    </div>
</div>

<div class="section stats">
    <div class="row">
        <div class="col-12">
            <h6 class="bordered">Connection status</h6>
        </div>
        <div class="col-6 col-sm-4 stats-item">
            <div class="stats-item-value">{{ users_today }}</div>
            <div class="stats-item-desc">Users connected today</div>
        </div>
        <div class="col-6 col-sm-4 stats-item">
            <div class="stats-item-value ips-connected-right-now">‚åõ</div>
            <div class="stats-item-desc">IPs connected right now</div>
        </div>
        <div class="col-6 col-sm-4 stats-item">
            <div class="stats-item-value">{{ ips_today }}</div>
            <div class="stats-item-desc">IPs connected today</div>
        </div>
        <div class="col-6 col-sm-4 stats-item">
            <div class="stats-item-value">{{ traffic_today }}</div>
            <div class="stats-item-desc">Traffic today</div>
        </div>
        <div class="col-6 col-sm-4 stats-item">
            <div class="stats-item-value">{{ traffic_this_month }}</div>
            <div class="stats-item-desc">Traffic in {{ month_name }}</div>
        </div>
    </div>
</div>
<div class="section stats">
    <div class="row">
        <div class="col-12">
            <h6 class="bordered">Connection stats in the past 7 days</h6>
            <canvas id="connectionChart" style="width: 100%; height: 250px;"></canvas>
        </div>
    </div>
</div>
<div class="mt-5" style="opacity: 0.5; font-size: 12px;">
    Libertea, version {{ cur_version }}
</div>
<script>
    function get_ips_connected_right_now() {
        fetch('/{{ admin_uuid }}/total-connected-ips-count')
            .then(function(response) {
                return response.text()
            })
            .then(function(data) {
                if (Number.isInteger(parseInt(data))) {
                    document.querySelector('.ips-connected-right-now').innerHTML = data;
                } else {
                    document.querySelector('.ips-connected-right-now').innerHTML = '-';
                }
            });
    }

    setInterval(get_ips_connected_right_now, 10000);
    get_ips_connected_right_now();

    
    const ctx = document.getElementById('connectionChart');

    new Chart(ctx, {
        type: 'bar',
        data: {
        labels: {{ connected_ips_over_time.x }},
        datasets: [{
            label: 'IPs connected',
            data: {{ connected_ips_over_time.y }},
            borderWidth: 1
        }]
        },
        options: {
        scales: {
            y: {
            beginAtZero: true
            }
        }
        }
    });
</script>

{% endblock %}
